#myvideo{
  width: 100%;
  height: 360rpx;
}
.ms{
  margin-top: -10rpx;
  border-bottom: grey solid 2rpx;
  height: 80rpx;
}
.ms>view{
  float: left;
  width: 50%;
  height: 100%;
  color: grey;
  font-size: 13px;
  text-align: center;
  line-height: 80rpx;
}
/* 点击绑定的样式 */
.active{
  color: rgb(0, 140, 255);
  background-color: rgba(255, 0, 0, 0.295);
}
/* 简介下面的描述 */
.des{
  width: 100%;
  height: 120rpx;
  border-bottom: solid 2rpx grey;
}
.des>text{
  margin-left: 20rpx;
  font-size: 12px;
  color: grey;
}
.des>text:first-child{
  margin-top: 20rpx;
  display: block;
  font-size: 14px;
  color: black;
}
.des_small{
  margin-top: 30rpx;
  margin-right: 30rpx;
}
/* 推荐视频 */
.box{
  position: relative;
  width: 100% ;
  height: 200rpx;
  /* border-top: grey solid 2rpx; */
  border-bottom: grey solid 2rpx;
}
/* 推荐图片 */
.box-img{
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  width: 260rpx;
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.box-img>image{
  width: 100%;
  height: 100%;
}
/* 推荐标题 */
.box-tit{
  width: 58%;
  height: 78rpx;
  position: absolute;
  top:20rpx;
  right: 20rpx;
  font-size: 14px;
  overflow: hidden;
}
/* 观看次数和点赞 */
.box-dz{
  width: 58%;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 12px;
}
.box-dz>image{
  width: 40rpx;
  height: 40rpx;
}
.box-dz>image:nth-child(3){
  margin-left: 50rpx;
}
/* 推荐视频文字的样式 */
.tj{
  margin-left: 20rpx;
  margin-top: 10rpx;
  color: rgba(255, 192, 203, 0.678)
}
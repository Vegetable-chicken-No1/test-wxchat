.tj{
  padding-left: 30rpx;
  margin-top: 10rpx;
  padding-bottom: 20rpx;
  color: rgba(255, 192, 203, 0.678);
  border-bottom: solid 2rpx grey;
}
/* 推荐视频 */
.box{
  position: relative;
  width: 100% ;
  height: 200rpx;
  /* border-top: grey solid 2rpx; */
  border-bottom: grey solid 2rpx;
}
/* 推荐图片 */
.box-img{
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  width: 260rpx;
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.box-img>image{
  width: 100%;
  height: 100%;
}
/* 推荐标题 */
.box-tit{
  width: 58%;
  height: 78rpx;
  position: absolute;
  top:20rpx;
  right: 20rpx;
  font-size: 14px;
  overflow: hidden;
}
/* 观看次数和点赞 */
.box-dz{
  width: 58%;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 12px;
}
.box-dz>image{
  width: 40rpx;
  height: 40rpx;
}
.box-dz>image:nth-child(3){
  margin-left: 50rpx;
}


/* 轮播图样式 */
page{
  height: 100%;
}
.u-wrp-bnr {
  width: 100%;
  height: 300rpx;
  display: block;
  position: relative;
  background: #f0f0f0;
}
u-wrp-bnr>image{
  width: 100%;
  height: 300rpx;
}
.u-img-slide {
  width: 100%;
  height: inherit;
}
/* 热门推荐 */
/* 热门推荐导航条 */
.tj image{
  width: 40rpx;
  height: 30rpx;
}
.tj{
  font-size: 14px;
  margin-top: 30rpx;
}
.tj>view:first-child{
  margin-left: 5%;
}
.tj>view{
  width: 45%;
  display: inline-block
}
.tj>view:nth-child(2){
  position: relative;
}
.tj>view:nth-child(2)>image{
  margin-left: 60%;
}
/* 热门推荐盒子 */
.bigbox{
  margin-top: 20rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  overflow: hidden;
}
/* 单独的小盒子 */
.box{
  margin-left: 5%;
  margin-top: 30rpx;
  border-radius: 10rpx;
  background-color: rgba(204, 197, 197, 0.103);
  overflow: hidden;
  flex-basis: 43%;
  height: 380rpx;
  position: relative;
}
/* 小盒子里面的图片 */
.box>image:first-child{
  border-radius: 20rpx;
  width: 100%;
  height: 80%;
}
/* 描述 */
.box>text{
  overflow: hidden;
  height: 30rpx;
  position: absolute;
  top:310rpx;
  left: 0;
  color: rgba(0, 0, 0, 0.548);
  font-size: 13px;
}
/* 最下面的播放和点赞 */
.box>view{
  color: grey;
  position: absolute;
  top: 345rpx;
  font-size: 13px;
}
.box>view>image{
  width: 30rpx;
  height: 30rpx;
}
.box>view>image:nth-child(3){
  margin-left: 60rpx;
}
/* 移入效果 */
.box:hover>.blue{
  color: rgb(0, 153, 255)
}
/* 舞蹈区 */
.wd{
  margin-top: 60rpx;
}
/* 结束 */
.end{
  padding-top:30rpx;
  padding-bottom: 30rpx;
  text-align: center;
  font-size:13px;
  color: rgba(255, 47, 75, 0.527)
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color:orange;
}

/* 头像 */
.mine_flex{
  margin-top: 60rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: center
}
.no_img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden
}
.no_img>image{
  width: 100%;
  height: 100%
}
.xm{
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 30rpx;
}
/* 获取授权按钮 */
.userinfo {
  margin-top: 30rpx;
  height: 80rpx;
  background-color: red;
} 
/* 最后 */
.end{
  width: 100%;
  margin-top: 30rpx;
  font-size: 13px;
  color: rgba(0, 0, 0, 0.726)
}
/* 最后的第一行 */
.end_one{
  border-top: solid 2rpx grey;
  border-bottom: solid 2rpx grey;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
}
.end_one:hover{
  color: rgb(0, 162, 255);
}
.end_one>text:first-child{
  position: absolute;
  left: 20rpx;
}
.end_one>text:last-child{
  position: absolute;
  right: 20rpx;
}
/* 最后的第二行 */
.end_two{
  border-bottom: solid 2rpx grey;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
}
.end_two>text:first-child{
  position: absolute;
  left: 20rpx;
}
.end_two>text:last-child{
  position: absolute;
  right: 20rpx;
}
.end_two:hover{
  color: rgb(0, 162, 255);
}